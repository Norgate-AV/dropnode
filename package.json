{
    "name": "@norgate-av/dropnode",
    "description": "Recursively ignore node_modules within a Dropbox",
    "version": "0.0.0",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "keywords": [
        "dropbox",
        "node_modules",
        "ignore"
    ],
    "bin": {
        "dropnode": "./dist/index.js"
    },
    "file": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Norgate-AV/dropnode.git"
    },
    "bugs": {
        "url": "https://github.com/Norgate-AV/dropnode/issues"
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "commit": "git-cz",
        "clean": "rimraf dist",
        "lint": "tsc --noEmit",
        "pretty:fix": "prettier --write .",
        "prebuild": "pnpm clean",
        "build": "tsup",
        "prestart": "pnpm lint && pnpm build",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "prepare": "husky"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/config": "^3.3.5",
        "@types/glob": "^8.1.0",
        "@types/node": "^22.10.7",
        "@types/nodemon": "^1.19.6",
        "commitizen": "^4.3.1",
        "conventional-changelog-conventionalcommits": "^8.0.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.1",
        "nodemon": "^3.1.9",
        "prettier": "^3.4.2",
        "rimraf": "^6.0.1",
        "semantic-release": "^24.2.0",
        "terser": "^5.37.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.5",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "@inquirer/prompts": "^7.2.3",
        "@listr2/prompt-adapter-inquirer": "^2.0.18",
        "chalk": "^5.4.1",
        "config": "^3.3.12",
        "dotenv": "^16.4.7",
        "envalid": "^8.0.0",
        "execa": "^9.5.2",
        "glob": "^11.0.1",
        "is-wsl": "^3.1.0",
        "listr2": "^8.2.5"
    }
}
