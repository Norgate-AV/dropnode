{
    "name": "dropnode",
    "displayName": "dropnode",
    "description": "Recursively ignore node_modules within a Dropbox",
    "version": "0.0.0-development",
    "license": "MIT",
    "main": "./dist/index.js",
    "bin": {
        "dropnode": "./dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "bugs": {
        "url": ""
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "commit": "git-cz",
        "clean": "rimraf dist",
        "lint": "tsc --noEmit",
        "pretty:fix": "prettier --write .",
        "prebuild": "pnpm clean",
        "build": "tsup",
        "prestart": "pnpm lint && pnpm build",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@types/config": "^3.3.1",
        "@types/glob": "^8.1.0",
        "@types/node": "^20.6.4",
        "@types/nodemon": "^1.19.1",
        "commitizen": "^4.3.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.1",
        "lint-staged": "^14.0.1",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.1",
        "terser": "^5.20.0",
        "ts-node": "^10.7.0",
        "tsup": "^7.2.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@inquirer/prompts": "^3.2.0",
        "@listr2/prompt-adapter-inquirer": "^1.0.1",
        "chalk": "v4",
        "config": "^3.3.9",
        "dotenv": "^16.3.1",
        "envalid": "^8.0.0",
        "execa": "^5.1.1",
        "glob": "^10.3.10",
        "listr2": "^7.0.1"
    }
}
