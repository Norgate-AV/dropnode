{
    "name": "dropnode",
    "displayName": "dropnode",
    "description": "Recursively ignore node_modules within a Dropbox",
    "version": "0.0.0-development",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "bin": {
        "dropnode": "./dist/index.js"
    },
    "file": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Norgate-AV/dropnode.git"
    },
    "bugs": {
        "url": "https://github.com/Norgate-AV/dropnode/issues"
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "commit": "git-cz",
        "clean": "rimraf dist",
        "lint": "tsc --noEmit",
        "pretty:fix": "prettier --write .",
        "prebuild": "pnpm clean",
        "build": "tsup",
        "prestart": "pnpm lint && pnpm build",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@types/config": "^3.3.4",
        "@types/glob": "^8.1.0",
        "@types/node": "^20.14.2",
        "@types/nodemon": "^1.19.6",
        "commitizen": "^4.3.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.5",
        "nodemon": "^3.1.3",
        "prettier": "^3.3.2",
        "rimraf": "^5.0.7",
        "terser": "^5.31.1",
        "ts-node": "^10.9.2",
        "tsup": "^8.1.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@inquirer/prompts": "^5.0.5",
        "@listr2/prompt-adapter-inquirer": "^2.0.11",
        "chalk": "^5.3.0",
        "config": "^3.3.11",
        "dotenv": "^16.4.5",
        "envalid": "^8.0.0",
        "execa": "^9.2.0",
        "glob": "^10.4.1",
        "is-wsl": "^3.1.0",
        "listr2": "^8.2.1"
    }
}
